{
  "name": "@openartmarket/supabase-live-table",
  "version": "0.0.0",
  "description": "Supabase Realtime on Absinthe",
  "author": {
    "name": "Open Art Market",
    "email": "hi@openartmarket.com",
    "url": "https://openartmarket.com"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "keywords": [
    "supabase",
    "realtime"
  ],
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint {src,test}/**/*.ts --fix",
    "upgrade": "npm-check-updates --upgrade",
    "codegen": "supabase gen types typescript --local > test/Database.ts",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "format": "prettier-eslint '{src,test}/**/*.ts' --write"
  },
  "repository": "openartmarket/supabase-live-table",
  "license": "MIT",
  "devDependencies": {
    "@supabase/supabase-js": "2.36.0",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "@vitest/coverage-v8": "0.34.5",
    "@vitest/ui": "0.34.5",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "npm-check-updates": "16.14.4",
    "prettier": "2.8.8",
    "prettier-eslint-cli": "7.1.0",
    "supabase": "1.99.5",
    "typescript": "5.2.2",
    "vite": "4.4.9",
    "vitest": "0.34.5"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --quiet --fix"
    ],
    "*.{json,ts}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "node": true
    }
  }
}
